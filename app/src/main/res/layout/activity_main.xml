<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    tools:context="com.example.user.resturantaid.MainActivity"
    android:orientation="vertical"
    android:id="@+id/parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Resturant App"
        android:textColor="#de2a2a"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/thumb_110"
        />

    <TextView
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#de2a2a"
        android:text="Admin"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textSize="17sp"/>

    <EditText
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:id="@+id/username"
        android:textSize="20sp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="email"
        android:background="@drawable/email_pass_back"
        android:textColor="#000"
       android:padding="5dp"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        />

    <EditText
        android:inputType="textPassword"
        android:maxLines="1"
        android:id="@+id/pass"
        android:fontFamily="serif-monospace"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="password"
        android:background="@drawable/email_pass_back"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        />

    <Button
        android:fontFamily="serif"
        android:id="@+id/login"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:text="login"
        android:textSize="20sp"
        android:background="@drawable/login_bak"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />


</LinearLayout>
